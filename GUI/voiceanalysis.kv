WindowManager:
    FirstWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:
    FifthWindow:
    SixthWindow:


<FirstWindow>:
    name: 'first'
    tonic:tonic
    type:type
    GridLayout:
        cols:1
        size: root.width, root.height
        spacing: 20
        padding:50
        GridLayout:
            cols:2
            spacing: 20
            padding:50
            Label:
                text: "Enter Tonic Note: "
            TextInput:
                id: tonic
                multiline:False
            Label:
                text: "Enter Type of Sargam: "
            TextInput:
                id: type
                multiline:False
        GridLayout:
            cols:4
            spacing: 20
            padding:50
            Button:
                text: "RECORD"
                on_press: root.startrecord()
            Button:
                text: "STOP"
                on_press: root.stoprecord()
            Button:
                text: "SAVE"
                on_press: root.saverecord()
            Button:
                text: "NEXT"
                on_release:
                    app.root.current = 'second'
                    root.manager.transition.direction = 'left'

<SecondWindow>:
    name: 'second'
    GridLayout:
        cols:1
        size: root.width, root.height
        spacing: 20
        padding:50
        Button:
            text: "BACK"
            on_release:
                app.root.current = 'first'
                root.manager.transition.direction = 'right'
        Button:
            text: "Determine Vocal Range"
            on_release:
                app.root.current = 'third'
                root.manager.transition.direction = 'left'
        Button:
            text: "Determine Vocal Features"
            on_release:
                app.root.current = 'fourth'
                root.manager.transition.direction = 'left'
        Button:
            text: "View Tristimulus Diagram"
            on_release:
                app.root.current = 'fifth'
                root.manager.transition.direction = 'left'
        Button:
            text: "View Power Spectrum"
            on_release:
                app.root.current = 'sixth'
                root.manager.transition.direction = 'left'

