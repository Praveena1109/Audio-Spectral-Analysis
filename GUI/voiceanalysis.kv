<FirstWindow>:
    name: 'first'
    GridLayout:
        cols:1
        size: root.width, root.height
        spacing: 20
        padding:50
        GridLayout:
            cols:2
            spacing: 20
            padding:50
            MDLabel:
                text: "Select Tonic Note: "
            GridLayout:
                cols:2
                CheckBox:
                    group: "tonic_note"
                    on_active: root.checkbox_click(self,self.active,"120")
                MDLabel:
                    text: "120"
                CheckBox:
                    group: "tonic_note"
                    on_active: root.checkbox_click(self,self.active,"130")
                MDLabel:
                    text: "130"
                CheckBox:
                    group: "tonic_note"
                    on_active: root.checkbox_click(self,self.active,"140")
                MDLabel:
                    text: "140"

            MDLabel:
                text: "Select Type of Sargam: "
            GridLayout:
                cols:2
                CheckBox:
                    group: "type"
                    on_active: root.checkbox_click1(self,self.active,"Aroh")
                MDLabel:
                    text: "Aroh"
                CheckBox:
                    group: "type"
                    on_active: root.checkbox_click1(self,self.active,"Avaroh")
                MDLabel:
                    text: "Avaroh"

        GridLayout:
            cols:4
            spacing: 20
            padding:50
            MDFlatButton:
                id: record
                text: "RECORD"
                on_press:
                    root.startrecord()
            MDFlatButton:
                id: stop
                text: "STOP"
                on_press:
                    root.stoprecord()
            MDFlatButton:
                text: "SAVE"
                on_release: root.saverecord()
            MDFlatButton:
                text: "NEXT"
                on_release:
                    app.root.current = 'second'
                    root.manager.transition.direction = 'left'


